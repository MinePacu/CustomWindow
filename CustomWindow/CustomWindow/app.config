<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <!-- Native DLL probing paths -->
      <probing privatePath="x64\Debug;x64\Release;." />
    </assemblyBinding>
    
    <!-- Enable legacy loading behavior for unmanaged DLLs -->
    <AppContextSwitchOverrides value="Switch.System.Runtime.Loader.UseRidGraph=true" />
    
    <!-- DLL �˻� ��� ���� -->
    <developmentMode developerInstallation="true"/>
  </runtime>
  
  <appSettings>
    <!-- BorderService ���� ���� -->
    <add key="BorderService.DllSearchPaths" value="x64\Debug;x64\Release;.;bin" />
    <add key="BorderService.EnableDiagnostics" value="true" />
  </appSettings>
</configuration>